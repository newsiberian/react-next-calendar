{
  "name": "@react-next-calendar/core",
  "version": "1.0.0",
  "description": "Calendar! with events",
  "author": {
    "name": "Jason Quense",
    "email": "monastic.panic@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newsiberian/react-next-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/newsiberian/react-next-calendar/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "style": "dist/styles.css",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "scheduler",
    "react-component",
    "react",
    "calendar",
    "events",
    "full calendar"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "sass": "node-sass src/sass/styles.scss ./dist/styles.css",
    "autoprefixer": "postcss --use autoprefixer < ./dist/styles.css",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:umd": "BABEL_ENV=esm yarn rollup -c",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build": "yarn clean && yarn build:tsc && yarn build:css",
    "test": "npm run lint && jest",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged"
  },
  "browserslist": [
    "defaults"
  ],
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint",
    "test/**/*.ts": "eslint",
    "*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "dependencies": {
    "@react-next-calendar/hooks": "^1.0.0",
    "@react-next-calendar/utils": "^1.0.0",
    "clsx": "1.1.1",
    "dom-helpers": "^5.1.0",
    "lodash": "^4.17.11",
    "lodash-es": "^4.17.11",
    "memoize-one": "^5.1.1",
    "react-overlays": "4.1.1",
    "tiny-invariant": "^1.1.0",
    "uncontrollable": "^7.0.0"
  },
  "devDependencies": {
    "@types/globalize": "^1.5.0"
  }
}
